<Window x:Class="ReactiveThreadSucks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReactiveThreadSucks"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="525" DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <StackPanel>
        <DataGrid ItemsSource="{Binding EventList, UpdateSourceTrigger=PropertyChanged}" Height="550"></DataGrid>
        <Button Content="Start suck" Command="{Binding StartSuckerCommand}" Height="20"></Button>
    </StackPanel>
</Window>
